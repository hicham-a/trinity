#!/bin/bash

#----------------------------------------------------------------------------
# Install OpenLDAP on the controller node
#----------------------------------------------------------------------------
systemctl start docker

if [ -z ${SITEMASTER} ]; then
    docker build --rm=true -t controller:5050/opendlap /trinity/openldap
else
    docker pull $CONTROLLER_DOCKER_REGISTRY:5050/openldap
    docker tag $CONTROLLER_DOCKER_REGISTRY:5050/openldap controller:5050/openldap
fi

cp -LrT $CONTROLLER_MASTER_FS/openldap/host/rootimg /
cp $CONTROLLER_MASTER_FS/openldap/rootimg/usr/sbin/obol /usr/local/sbin/

systemctl enable slapd 
systemctl start slapd

#----------------------------------------------------------------------------
# Setup the local database on the main controller
#----------------------------------------------------------------------------
n=$(echo $NODE | egrep -o '[[:digit:]]*' | head -n1)
# normalize to 1 or 2
N=$((((n-1)%2)+1))

if [[ $N = 1 ]]; then

    while :; do
        ldapadd -D cn=Manager,dc=local -w $LDAP_ADMIN_PW 2>/dev/null << EOF
dn: dc=local
dc: local
objectClass: domain

dn: ou=People,dc=local
ou: People
objectClass: top
objectClass: organizationalUnit

dn: ou=Group,dc=local
ou: Group
objectClass: top
objectClass: organizationalUnit

dn: cn=uid,dc=local
cn: uid
objectClass: uidNext
uidNumber: 1050

dn: cn=gid,dc=local
cn: gid
objectClass: uidNext
uidNumber: 150
EOF

        [[ $? == 0 ]] && break;
        sleep 5;
    done

    obol -w $LDAP_ADMIN_PW group add power-users
fi

#----------------------------------------------------------------------------
# Setup SSSD
#----------------------------------------------------------------------------
yum -y -q install sssd authconfig

chmod 600 /etc/sssd/sssd.conf
systemctl enable sssd
systemctl start sssd

authconfig --enablemkhomedir --enablesssd --enablesssdauth --update

echo "$0 finished @ $(date)" >> /var/log/postinstall.log
