part /boot --size 256 --fstype ext4 --ondisk {< controller.disk >}
part swap --recommended --ondisk {< controller.disk >}
part pv.01 --size 1 --grow --ondisk {< controller.disk >}
volgroup vg_root pv.01
logvol / --vgname=vg_root --name=lv_root --size {< controller.root_lv_size >} --fstype ext4
logvol  /drbd  --vgname=vg_root --name=lv_drbd --size={< controller.drbd_lv_size >}
